<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.CategoryBottomFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView
            android:id="@+id/indian_market_category"
            android:layout_width="120dp"
            android:layout_height="120dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginStart="70dp"
            android:layout_marginTop="70dp"
            style="@style/MarketCard">

            <ImageView
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:scaleType="centerCrop"
                android:src="@drawable/indian_market_image"
                android:tintMode="multiply"
                app:tint="#B1AEAE" />

            <TextView
                style="@style/MarketText"
                android:text="IMarket" />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/global_market_category"
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:layout_marginEnd="-20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_alignStart="@id/indian_market_category"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="9dp"
            android:layout_marginTop="60dp"
            style="@style/MarketCard">

            <ImageView
                android:layout_width="158dp"
                android:layout_height="180dp"
                android:scaleType="centerCrop"
                android:src="@drawable/global_market"
                android:tintMode="multiply"
                app:tint="#6C6A6A" >
            </ImageView>

            <TextView
                style="@style/MarketText"
                android:textSize="18sp"
                android:text="Global"
                />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/crypto_market_category"
            android:layout_width="180dp"
            android:layout_height="180dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/indian_market_category"
            android:layout_marginStart="-30dp"
            android:layout_marginTop="30dp"
            style="@style/MarketCard">

            <ImageView
                android:layout_width="180dp"
                android:layout_height="180dp"
                android:layout_marginStart="31dp"
                android:scaleType="centerCrop"
                android:src="@drawable/crypto_market_image"
                android:tintMode="multiply"
                app:tint="#6C6A6A" />

            <TextView
                style="@style/MarketText"
                android:textSize="21sp"
                android:text="Crypto" />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/stocks_market_category"
            android:layout_width="120dp"
            android:layout_height="120dp"
            app:layout_constraintStart_toEndOf="@id/crypto_market_category"
            app:layout_constraintTop_toTopOf="@id/crypto_market_category"
            style="@style/MarketCard"
            android:layout_marginTop="-10dp"
            android:layout_marginStart="10dp">

            <ImageView
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:scaleType="centerCrop"
                android:src="@drawable/stock"
                android:tintMode="multiply"
                app:tint="#6C6A6A" />

            <TextView
                style="@style/MarketText"
                android:text="Stocks"
                android:textStyle="bold" />
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:id="@+id/commodities_market_category"
            android:layout_width="160dp"
            android:layout_height="160dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/stocks_market_category"
            style="@style/MarketCard"
            android:layout_marginEnd="5dp">

            <ImageView
                android:layout_width="160dp"
                android:layout_height="160dp"
                android:scaleType="centerCrop"
                android:src="@drawable/commodity_image"
                android:tintMode="multiply"
                app:tint="#6C6A6A" />

            <TextView
                style="@style/MarketText"
                android:text="Commodities"
                android:textSize="21sp" />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/mutual_funds"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_marginStart="80dp"
            app:layout_constraintTop_toBottomOf="@id/crypto_market_category"
            app:layout_constraintStart_toStartOf="parent"
            style="@style/MarketCard">
            <ImageView
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:src="@drawable/mutual_fund_image"
                android:tintMode="multiply"
                app:tint="#6C6A6A"
                android:scaleType="centerCrop"/>
            <TextView
                style="@style/MarketText"
                android:text="Mutual Funds"
                android:textSize="20sp" />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/currency_market_category"
            android:layout_width="180dp"
            android:layout_height="180dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/commodities_market_category"
            style="@style/MarketCard"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="10dp">

            <ImageView
                android:layout_width="180dp"
                android:layout_height="180dp"
                android:scaleType="centerCrop"
                android:src="@drawable/currency_image"
                android:tintMode="multiply"
                app:tint="#6C6A6A" />

            <TextView
                style="@style/MarketText"
                android:text="Currency"
                android:textSize="21sp" />
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:id="@+id/ipo_market_category"
            android:layout_width="170dp"
            android:layout_height="170dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/mutual_funds"
            android:layout_marginEnd="20dp"
            style="@style/MarketCard">

            <ImageView
                android:layout_width="170dp"
                android:layout_height="170dp"
                android:scaleType="centerCrop"
                android:src="@drawable/ipo_image"
                android:tintMode="multiply"
                app:tint="#6C6A6A" />

            <TextView
                style="@style/MarketText"
                android:text="IPO"
                android:textSize="21sp" />
        </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>